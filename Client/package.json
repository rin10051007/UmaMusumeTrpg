{
  "name": "client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:Common": "ng build Common --configuration development",
    "build:SystemControl": "ng build SystemControl --configuration development",
    "build:UmaMusumeControl": "ng build UmaMusumeControl --configuration development",
    "build:AuthControl": "ng build AuthControl --configuration development",
    "build": "run-s build:All build:SystemControl build:UmaMusumeControl build:AuthControl",
    "watch:Common": "ng build Common --watch --configuration development",
    "watch:SystemControl": "ng build SystemControl --watch --configuration development --optimization=false",
    "watch:UmaMusumeControl": "ng build UmaMusumeControl --watch --configuration development --optimization=false",
    "watch:AuthControl": "ng build AuthControl --watch --configuration development --optimization=false",
    "watch:App": "run-p watch:SystemControl watch:UmaMusumeControl watch:AuthControl",
    "watch": "run-p watch:Common timeout:App",
    "prod:Common": "ng build Common --configuration production",
    "prod:SystemControl": "ng build SystemControl --configuration production",
    "prod:UmaMusumeControl": "ng build UmaMusumeControl --configuration production",
    "prod:AuthControl": "ng build AuthControl --configuration production",
    "prod": "run-s prod:*",
    "test": "ng test",
    "timeout:10": "timeout /t 10",
    "timeout:App": "run-s timeout:10 install:common watch:App",
    "link": "npm link",
    "link:Common": "npm link common",
    "cd:dist": "cd C:\\App\\UmaMusumeTrpg\\Client\\dist\\common",
    "cd:Client": "cd C:\\App\\UmaMusumeTrpg\\Client",
    "build:All": "run-s build:Common cd:dist link cd:Client link:Common",
    "install:common": "npm install ./dist/common"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.5",
    "@angular/cdk": "^19.0.4",
    "@angular/common": "^19.0.5",
    "@angular/compiler": "^19.0.5",
    "@angular/core": "^19.0.5",
    "@angular/forms": "^19.0.5",
    "@angular/material": "^19.0.4",
    "@angular/platform-browser": "^19.0.5",
    "@angular/platform-browser-dynamic": "^19.0.5",
    "@angular/router": "^19.0.5",
    "@auth0/angular-jwt": "^5.2.0",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "common": "file:dist/common",
    "glob": "^11.0.0",
    "jwt-decode": "^4.0.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.6",
    "@angular/cli": "~19.0.6",
    "@angular/compiler-cli": "^19.0.5",
    "@types/jasmine": "~5.1.4",
    "jasmine-core": "~5.1.2",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  }
}
